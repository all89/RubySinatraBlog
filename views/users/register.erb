<!-- Each visitor can be registered with the proper information filled in this form -->
<h2 style="color: #0084b1">Register</h2>
<hr>

<form action="/register" method="post" role="form">
    <div class="form-group">
  	    <label for="name">Name:</label>
  	    <br>
  	    <input id="name" class="form-control" name="name" style="width: 40%"/>
    </div>
    <div class="form-group">
  	    <label for="surname">Surname:</label>
  	    <br>
  	    <input id="surname" class="form-control" name="surname" style="width: 40%"/>
    </div>
    <div class="form-group">
  	    <label for="id">Username:</label>
  	    <br>
  	    <input id="id" class="form-control" name="id" type="text" style="width: 40%"/>
    </div>
    <div class="form-group">
  	    <label for="password">Password:</label>
  	    <br>
  	    <input id="password" class="form-control" name="password" type="password" style="width: 40%"/>
    </div>
    <div class="form-group">
  	    <label for="email">Email:</label>
  	    <br>
  	    <input id="email" class="form-control" name="email" style="width: 40%"/>
    </div>
    <button type="submit" class="btn btn-success">Sign Up</button>
</form>